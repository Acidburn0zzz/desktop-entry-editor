#!/usr/bin/env python
import sys

python_dir = "@pythondir@".replace("${prefix}", "@prefix@")
sys.path.insert(1, python_dir)

try:
    from dee.application import Application 
except ImportError, e:
    msg = "Could not find 'dee' package. This is likely an installation error."
    sys.exit("%s\n%s" % (msg, e))
 
if __name__ == "__main__":
    app = Application('@PACKAGE@', 
                      '@VERSION@', 
                      "@datarootdir@".replace("${prefix}", "@prefix@"))
    app.install_exception_hook()
    app.run()
